<!doctype html>
<html>
<head>
    <title>Rixx Music</title>
    <link rel="stylesheet" href="//netdna.bootstrapcdn.com/bootstrap/3.0.2/css/bootstrap.min.css">
    <link rel="stylesheet" href="//netdna.bootstrapcdn.com/font-awesome/4.0.3/css/font-awesome.min.css">
    <style>
        body         { padding-top:80px; word-wrap:break-word; }
    </style>
</head>
<body>
<div class="container">

    <div class="page-header text-center">
        <h1><span class="fa fa-anchor"></span>Account</h1>
        <a href="/account" class="btn btn-info btn-sm">My Account</a>
        <a href="/all_posts" class="btn btn-info btn-sm">News Feed</a>
        <a href="/settings" class="btn btn-info btn-sm">My Settings</a>
        <a href="/following" class="btn btn-info btn-sm">Following</a>
        <a href="/followers" class="btn btn-info btn-sm">Followers</a>
        <a href="/users" class="btn btn-info btn-sm">Users</a>
        <a href="/logout" class="btn btn-danger btn-sm">Logout</a>
    </div>
    <div class="row">
        
    </div>
    <h1>New Post:</h1>
    <form action="/post_image" method="post" enctype="multipart/form-data">
        image:<input type="file" name="filetoupload">
        <input type="submit" value='Post'>
    </form>
    <br>
    <form action="/listen_song" method="post">
        song id:<input type="text" name="theId"><br>
        <input type="submit" value='listen'>
    </form>
    
    <div class="row">
        <h2>The Posts</h2>
        <a href="/my_posts" class="btn btn-info btn-sm">My Posts</a>
        
        
    </div>



    

</div>
</body>
</html>