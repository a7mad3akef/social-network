<!doctype html>
<html>
<head>
    <title>Rixx Music</title>
    <link rel="stylesheet" href="//netdna.bootstrapcdn.com/bootstrap/3.0.2/css/bootstrap.min.css">
    <link rel="stylesheet" href="//netdna.bootstrapcdn.com/font-awesome/4.0.3/css/font-awesome.min.css">
    <style>
        body         { padding-top:80px; word-wrap:break-word; }
    </style>
</head>
<body>
<div class="container">

    <div class="page-header text-center">
        <a href="/account" class="btn btn-info btn-sm">My Account</a>
        <a href="/all_posts" class="btn btn-info btn-sm">News Feed</a>
        <a href="/settings" class="btn btn-info btn-sm">My Settings</a>
        <a href="/following" class="btn btn-info btn-sm">Following</a>
        <a href="/followers" class="btn btn-info btn-sm">Followers</a>
        <a href="/users" class="btn btn-info btn-sm">Users</a>
        <a href="/logout" class="btn btn-danger btn-sm">Logout</a>
        

    </div>

    


    <% for(var i=0; i<result.length; i++) { %>
         
        <% if (result[i].pushed_by_name) { %>
                
            <% if (result[i].relative_path) { %>
                <p>
                    at that time:<a href='posts?id=<%= result[i]._id %>' ><%= result[i].time %></a>
                    <br>
                    <a href='user?id=<%= result[i].pushed_by_id %>' ><%= result[i].pushed_by_name %></a> pushed this post
                    <br>
                    <a href='user?id=<%= result[i].user_id %>' ><%= result[i].user_name %></a> uploaded this image
                    <br>
                    <img src='<%= result[i].relative_path %>' height="100" width="100"><br>   
                </p>
                
            <% } else { %>
                <p>
                at that time:<a href='posts?id=<%= result[i]._id %>' ><%= result[i].time %></a>
                <br>
                <a href='user?id=<%= result[i].pushed_by_id %>' ><%= result[i].pushed_by_name %></a> pushed this post:
                <br>
                <a href='user?id=<%= result[i].user_id %>' ><%= result[i].user_name %></a> listen to this song <%= result[i].title %>
                <br>
                </p>
            <% } %>
                    
        <% } else { %>

            <% if (result[i].relative_path) { %>
                <p>
                    at that time:<a href='posts?id=<%= result[i]._id %>' ><%= result[i].time %></a>
                    <br>
                    <a href='user?id=<%= result[i].user_id %>' ><%= result[i].user_name %></a> uploaded this image
                    <br>
                    <img src='<%= result[i].relative_path %>' height="100" width="100"><br>
                    
                    
                </p>
                
            <% } else { %>
                <p>
                at that time:<a href='posts?id=<%= result[i]._id %>' ><%= result[i].time %></a>
                <br>
                <a href='user?id=<%= result[i].user_id %>' ><%= result[i].user_name %></a> listen to this song <%= result[i].title %>
                <br>
                </p>
            <% } %>
            
            <!-- <a href='follow?id=<%= result[i]._id %>&name=<%= result[i].name %>' class="btn btn-success btn-sm">Follow </a> -->
        <% } %>

    <% } %>
        
</div>
</body>
</html>
